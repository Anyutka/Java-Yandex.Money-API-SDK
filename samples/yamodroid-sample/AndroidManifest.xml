<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.samples.yamodroid" android:versionCode="1"
          android:versionName="1.0-SNAPSHOT">

    <uses-sdk android:minSdkVersion="10"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name="com.samples.yamodroid.HelloAndroidActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="com.samples.yamodroid.HelloAndroidActivity"
                android:label="@string/app_name"
                android:configChanges="orientation"
                >
        </activity>

        <activity
                android:name="ru.yandex.money.droid.activities.AuthActivity"
                android:label="@string/app_name"
                android:configChanges="orientation"
                >
        </activity>

        <activity
                android:name="ru.yandex.money.droid.activities.HistoryActivity"
                android:theme="@style/Theme.Light.YM"
                android:label="@string/app_name"
                android:configChanges="orientation"
                />

        <activity
                android:name="ru.yandex.money.droid.activities.DetailHistoryActivity"
                android:label="@string/app_name"
                android:theme="@style/Theme.Light.YM"
                android:configChanges="orientation"
                />

        <activity
                android:name="ru.yandex.money.droid.activities.PaymentActivity"
                android:theme="@style/Theme.Light.YM"
                android:label="@string/app_name"
                android:configChanges="orientation"
                />

    </application>

</manifest>

